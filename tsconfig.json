{
  "extends": "@tsconfig/recommended/tsconfig.json",

  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "jsx": "react"
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}